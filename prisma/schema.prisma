generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  nombre       String?
  passwordHash String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  productos    Producto[]
  role         Role           @default(USER)
  tokens       RefreshToken[]
}

model RefreshToken {
  id                String   @id @default(cuid()) // JTI
  tokenHash         String // hash del refresh
  expiresAt         DateTime
  revoked           Boolean  @default(false)
  replacedByTokenId String?
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Mesa {
  id         String   @id @default(cuid())
  numeroMesa Int      @unique
  comanda    Comanda? // Relaci√≥n 1:1 con la comanda activa
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Comanda {
  id          String  @id @default(cuid())
  description String?
  mesa        Mesa    @relation(fields: [mesaId], references: [id])
  mesaId      String  @unique // Solo una comanda activa por mesa
  activo      Boolean @default(true)

  detalles     ComandaDetalle[]
  comandaTotal ComandaTotal?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model ComandaDetalle {
  id          String   @id @default(cuid())
  comanda     Comanda  @relation(fields: [comandaId], references: [id], onDelete: Cascade)
  comandaId   String
  producto    Producto @relation(fields: [productoId], references: [id])
  productoId  String
  cantidad    Int      @default(1)
  precio      Float?
  observacion String?
}

model ComandaTotal {
  id        String   @id @default(cuid())
  comanda   Comanda  @relation(fields: [comandaId], references: [id])
  comandaId String   @unique
  total     Float    @default(0)
  updatedAt DateTime @updatedAt
}

model Producto {
  id          String           @id @default(cuid())
  nombre      String?
  description String?
  tipo        Tipo             @default(COMESTIBLE)
  dueDate     DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  detalles    ComandaDetalle[]
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Tipo {
  BEBESTIBLE
  COMESTIBLE
}
