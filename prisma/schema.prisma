generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Tipo {
  BEBESTIBLE
  COMESTIBLE
}

enum ComandaEstado {
  PENDIENTE
  EN_PREPARACION
  ENTREGADO
  PAGADO
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  name       String?
  passwordHash String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  comandas     Comanda[]
  role         Role           @default(USER)
  tokens       RefreshToken[]
}

model RefreshToken {
  id                String   @id @default(cuid()) // JTI
  tokenHash         String // hash del refresh
  expiresAt         DateTime
  revoked           Boolean  @default(false)
  replacedByTokenId String?
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Mesa {
  id         String   @id @default(cuid())
  numeroMesa Int      @unique
  capacidad  Int?
  usada      Boolean  @default(false)
  // Coordenadas para el frontend
  posX       Int      @default(0)
  posY       Int      @default(0)

  comanda    Comanda[] // Relaci√≥n 1:n con la comanda activa para el historial
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Comanda {
  id          String  @id @default(cuid())
  estado      ComandaEstado @default(PENDIENTE)
  description String?
  mesa        Mesa    @relation(fields: [mesaId], references: [id])
  mesaId      String  

  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)


  detalles     ComandaDetalle[]
  total         Float    @default(0)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model ComandaDetalle {
  id          String   @id @default(cuid())
  comanda     Comanda  @relation(fields: [comandaId], references: [id], onDelete: Cascade)
  comandaId   String
  producto    Producto @relation(fields: [productoId], references: [id])
  productoId  String
  cantidad    Int      @default(1)
  precioUnitario     Float? //precio para guardar cuanto costo en el momento de la comanda
  observacion String?
}

model Producto {
  id          String           @id @default(cuid())
  nombre      String?
  description String?
  tipo        Tipo             @default(COMESTIBLE)
  precio      Float // precio Base del producto
  activo Boolean        @default(true)
  dueDate     DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  detalles    ComandaDetalle[]

}


